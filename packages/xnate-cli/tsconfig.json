{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "jsx": "preserve",
    "moduleResolution":"Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
